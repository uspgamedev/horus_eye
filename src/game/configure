# game/configure
# Configura compilacao do jogo
#

if [ -e ./CMakeLists.base ] && [ -e ./update_cmake ] ; then
  ./update_cmake
  cmake .
else
  echo "Erro: impossivel configurar! Verifique se os arquivos ./CMakeLists.base e ./update_cmake estao presentes."
fi
